<div class="category-container">   
     {{#each this.category}}
        <div class="header-container" id="{{this.id}}"><h1 class="header">{{this.category}}</h1></div>
        <div class="main-container">  
            {{#each this.products}}
                <div class="product-container">
                    <img src="{{image}}">
                    <div class="caption-container">
                        <h6 class="product-name">{{name}}</h6>
                        <h6 class="product-price">â‚± {{price}}</h6>
                        <a href="/addtobag/{{id}}"><div class="order-button">Order</div></a>
                    </div>
                </div>
            {{/each}}
        </div>
     {{/each}}
</div>