<div class="details-content">
    <p class="det-header">My Addresses</p>
    <hr class="line-break">
    <div class="break2"></div>
    
    <div id="addresses">
        {{#if disableDel}}
            {{#each address}}
                <div class="field">
                    <div class="field-name"> <img src="images/house.png" width="53" height="53"> </div>
                    <p class="field-value">{{this}}</p>
                    <div class="buttons modify">
                        <button class="modify-btn editElement"><strong>Edit</strong></button>
                        <button class="modify-btn hide save"><strong>Save</strong></button>
                        <button class="modify-btn del" disabled><strong>Delete</strong></button>
                    </div>
                </div>
                <div class="break2"></div>
            {{/each}}
        {{else}}
            {{#each address}}
                <div class="field">
                    <div class="field-name"> <img src="images/house.png" width="53" height="53"> </div>
                    <p class="field-value">{{this}}</p>
                    <div class="buttons modify">
                        <button class="modify-btn editElement"><strong>Edit</strong></button>
                        <button class="modify-btn hide save"><strong>Save</strong></button>
                        <button class="modify-btn del"><strong>Delete</strong></button>
                    </div>
                </div>
                <div class="break2"></div>
            {{/each}}
        {{/if}}
    </div>
    <div class="break2"></div>
    <div class="break2"></div>
    <div class="buttons">
        <button class="btn" id="add"><strong>Add New Address</strong></button>
    </div>
</div>